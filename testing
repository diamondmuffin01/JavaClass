import javax.swing.JOptionPane; //JOptionPane class
import java.util.Scanner;

public class ProgChall15{  
    public static void main (String[] args){
        
        Scanner input = new Scanner(System.in);
        
        final double commRate = 0.02; 
        
        String temp;
        String temp2;
        double total, pricePerShareDouble,commission, totalCostShares;
        int numShares;
        
      
        //get input
        temp = JOptionPane.showInputDialog("Enter number of shares purchased : ");
        numShares = Integer.parseInt(temp);
        
        temp2 = JOptionPane.showInputDialog("Enter number of price per share : ");
        pricePerShareDouble = Double.parseDouble(temp2);
        
        
        
       //computations & display output
       totalCostShares = numShares * pricePerShareDouble;
       
        
       commission = totalCostShares * commRate;
       total = commission + totalCostShares;
       JOptionPane.showMessageDialog(null, 
       String.format("Total cost of shares are $%,.2f \n Commission cost is: $%,.2f \n Total Cost is $%,.2f",totalCostShares,commission,total));
      
    
           
           System.exit(0);
    }
}
